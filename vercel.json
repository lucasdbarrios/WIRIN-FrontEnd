{
    "$schema": "https://openapi.vercel.sh/vercel.json",
    "version": 2,
    "buildCommand": "npm run build:prod",
    "outputDirectory": "dist/sakai-ng",
    "framework": "angular",
    "installCommand": "npm ci",
    "headers": [
        {
            "source": "/static/(.*)",
            "headers": [
                {
                    "key": "Cache-Control",
                    "value": "public, max-age=31536000, immutable"
                }
            ]
        },
        {
            "source": "/(.*)\\.js",
            "headers": [
                {
                    "key": "Cache-Control",
                    "value": "public, max-age=31536000, immutable"
                }
            ]
        },
        {
            "source": "/(.*)\\.css",
            "headers": [
                {
                    "key": "Cache-Control",
                    "value": "public, max-age=31536000, immutable"
                }
            ]
        },
        {
            "source": "/(.*)\\.png",
            "headers": [
                {
                    "key": "Cache-Control",
                    "value": "public, max-age=31536000, immutable"
                }
            ]
        },
        {
            "source": "/(.*)\\.jpg",
            "headers": [
                {
                    "key": "Cache-Control",
                    "value": "public, max-age=31536000, immutable"
                }
            ]
        },
        {
            "source": "/(.*)\\.svg",
            "headers": [
                {
                    "key": "Cache-Control",
                    "value": "public, max-age=31536000, immutable"
                }
            ]
        }
    ],
    "rewrites": [
        {
            "source": "/api/(.*)",
            "destination": "/api/$1"
        },
        {
            "source": "/((?!api).*)",
            "destination": "/index.html"
        }
    ],
 
    "trailingSlash": false,
    "cleanUrls": true,
    "functions": {
        "app/api/**/*.js": {
            "runtime": "nodejs18.x"
        }
    },
    "redirects": [
        {
            "source": "/index.html",
            "destination": "/",
            "permanent": false
        }
    ],
    "build": {
        "env": {
            "NODE_OPTIONS": "--max-old-space-size=4096"
        }
    },
    "github": {
        "silent": true
    }
}